<%include ../partials/header %>

<div class="container">
	<div class="col" align="center">
		<h1>
			Edit comment:
		</h1>
		<div style="width:30%; margin: 50px auto;">
			<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block">Submit</button>
				</div>
			</form>

			
		</div>
		<a href="/campgrounds/<%= campground_id %>">Back to campground</a>
	</div>
</div>	
<%include ../partials/footer %>