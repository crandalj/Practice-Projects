<%include partials/header %>

<div class="container">
	<div class="col" align="center">
		<h1>
			Register with YelpCampDemo
		</h1>
		<div style="width:30%; margin: 50px auto;">
			<form action="/register" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="insert username" name="username" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="password" placeholder="insert password" name="password" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="email" placeholder="insert email address" name="email" required>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block">Register</button>
				</div>
			</form>
		</div>
	</div>
</div>	
<%include partials/footer %>